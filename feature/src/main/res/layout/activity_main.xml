<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.syntex_error.dailybook.feature.MainActivity">


    <EditText
        android:id="@+id/etLastName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="134dp"
        android:hint="Reason" />

    <EditText
        android:id="@+id/etFavFood"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="202dp"
        android:hint="Amount"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="190dp"

        android:text="Add" />

    <Button
        android:id="@+id/btnView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnAdd"
        android:text="History" />

    <Button
        android:id="@+id/btn_del"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnAdd"
        android:layout_centerHorizontal="true"
        android:text="CLear " />

    <Button
        android:id="@+id/button_cal"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etLastName"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="96dp"

        android:layout_marginEnd="3dp"
        android:text="Calculate\nExpences" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="385dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button_cal"
        android:layout_marginStart="-118dp"
        android:layout_marginTop="0dp"
        android:text="Track Your Expences\nEnter Those Values and You are Good to Go. "
        android:textColor="#000"
        android:textSize="25dp"
         />
</RelativeLayout>